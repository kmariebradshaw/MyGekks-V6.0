<style>
h2 { text-align: center; font-weight: bolder; letter-spacing: normal; margin-top: 20px;}
h5 { text-align: center; font-weight: lighter; letter-spacing: normal; line-height: normal;margin-top:10px;}
.discount-cta h2 { font-weight: normal; }
.discount-cta h2:hover { color: #33ffcc; }
#form-half {
    width: 49%;
    text-align: center;
    display: inline-block;
    vertical-align: middle;
}

form input, textarea {
    border: 2px solid #d3d3d3 !important;
    width: 90% !important;
    height: 50px !important;
    margin: 10px auto;
    margin-bottom: 0px !important;
}

form { margin: 50px; margin-bottom: 50px !important;}

#wishlist-note { width: 242px; padding: 7px 9px; font-size: 14px;}
#preview { width: 49%; display:inline-block; vertical-align: middle; }
.email-preview { width: 90%; margin: 20px auto; overflow: hidden; }

body #page form .klaviyo_form_actions button{
    width: 90%;
    margin: 0 auto;
    display: block;
    height: 50px;
    font-size: 18pt;
    margin-top: 20px;
}

#note-wish {
    max-width: 90%;
    text-align: center;
    padding-bottom: 0px;
    margin: 5px auto;
}

#to-wish, #from-wish { display: inline-block; }
.email-preview img { max-width: 100%; }
</style>    

<main id="page">	     
    <h2>Get the Socks <br>
     You Actually Want</h2>
    <h5>Email your friends & family <br>to let them know you want Gekks this year</h5>
    <form style="max-width: none !important;" id="wishlist_signup" class="klaviyo_styling klaviyo_standard_embed_NHr8RS" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
        <input type="hidden" name="g" value="NHr8RS">
        <input type="hidden" name="$fields" value="friendsName, note"/>
        <div id="form-half">      
            <input type="text" value="" name="friendsName" id="your_name" placeholder="Your Name"><br>
            <input type="email" value="" name="email" id="friends_email" placeholder="Email" /><br>
            <textarea id="wishlist-note" value="" name="note" placeholder="Note"></textarea>
            <div class="klaviyo_messages">
            <div class="success_message" style="display:none;"></div>
            <div class="error_message" style="display:none;"></div>
    </div>
    <div class="klaviyo_form_actions">
        <button type="submit" class="klaviyo_submit_button">Send!</button>
    </div>
        </div>
        <div id="preview">
            <div class="email-preview">
                To: <div id="to-wish"> </div> 
                <img src="{{'preview-email-header.png' | asset_url}}" />
                <p id="note-wish" style="display: none;"></p>
                <img src="{{'preview-email-footer.png' | asset_url}}" /> 
                From: <div id="from-wish"></div>
            </div>
        </div> 
    </form> 

{% comment %} display error messages {% endcomment %}
<script type="text/javascript">
  KlaviyoSubscribe.attachToForms('#wishlist_signup', {
    success_message: "Your message has been sent!"
  });

  $("#friends_email").keyup(function() {
    $('#to-wish').text(this.value);  
  }); 
  $("#your_name").keyup(function() {
    $('#from-wish').text(this.value); 
  }); 
  $("#wishlist-note").keyup(function() {
    $('#note-wish').show(); 
    $('#note-wish').text(this.value); 
  }); 
</script>  

