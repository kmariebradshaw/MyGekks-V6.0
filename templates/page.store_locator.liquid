  {{ 'store-locator.js' | asset_url | script_tag }}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBvRChlhh2OJJJ0wtPAeRUHV97djHsizMI&callback=storeLocator.init" defer></script>

<main id="store-locator">
      <div id="store_map" style="height: 480px; position: relative; background-color: rgb(229, 227, 223); overflow: hidden;">
          <div class="gm-style" style="position: absolute; left: 0px; top: 0px; overflow: hidden; width: 100%; height: 100%; z-index: 0;"></div>
      </div>
      <section class="content split">
          <div class="wrap">
              <header>
                  <h1>{{ page.title }}</h1>
              </header>
              <div class="clearfix flex">
                  <div class="half">
                        <!-- Search Bar -->
                      <div class="search_bar">
                            <div class="main_search_bar">
                                <span class="main_search_label">Search by zip code</span>
                                <input type="text" placeholder="Type ZIP code" name="searchQuery" id="address_search" />
                            </div>
                            <div class="search_within_distance">
                                <span class="distance_label">Distance</span>
                                <select id="within_distance" class="minimalselect" id="searchRadius">
                                    <option selected="selected" value="25">25 KM</option>
                                    <option value="50">50 KM</option>
                                    <option value="100">100 KM</option>
                                    <option value="0">No Limit</option>
                                </select>
                            </div>
                            <button onclick="storeLocator.search()">Search</button>
                            <div style="clear:both"></div>
                        </div>
                        <!-- END Search Bar -->
                  </div>
                  <div class="half">
                      <div id="addresses_list" class="addresses">
                          <ul class="store-list"></ul>
                      </div>
                  </div>
              </div>
          </div>
      </section>
    </main>