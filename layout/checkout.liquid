<!doctype html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <link rel="icon" type="image/png" href="{{ 'Gekks-Favicon.png' | asset_url }}">

    <title>{{ shop.name }} - {{ page_title }}</title>

    {{ content_for_header }}
		{{ checkout_scripts }}
    {{ checkout_stylesheets }}
	{{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
    {{ 'autocomplete.js' | asset_url | script_tag }}
    {{ 'customcheckout.js' | asset_url | script_tag }}
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet">
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwgQanHBkEuYZAp2IN5ern_Gpg-3g8IWI&libraries=places&callback=initAutocomplete" async="" defer="defer"></script>
 	{% include 'referafriend' %}
    <!-- BEGIN PRIVY WIDGET CODE -->
<script type='text/javascript'> var _d_site = _d_site || '2BF38635C1FD16E55A484970'; </script>
<script src='//widget.privy.com/assets/widget.js'></script>
<!-- END PRIVY WIDGET CODE -->

  </head>
  
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
  <body>
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            <center>
            <h1 id="checkout-title">checkout</h1>
            <div class="fake-header btn" id="customer-information" style="padding: 19.275px !important;"><a href="#" class="bta">① Customer Information</a></div>
            <div id="check-mark-prev" class="invis check"><img src="{{'checkmark.png' |asset_url }}" alt="✓" /></div>
            <div id="check-mark" class="invis check"><img src="{{'checkmark.png' |asset_url }}" alt="✓" /></div>
            {% if shop.metafields.locksmith.active %}{% include 'locksmith' %}{% else %}{{ content_for_layout }}{% endif %}
   
            <div class="fake-header btn" id="payment-information" style="padding: 23px !important;">③ Payment Information</div>
            <div id="backcart"><a href="/cart">← Back to Cart                        

</a></div>
            </center>
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
      </div>
    </div>
   
     <span id="discount-code" class="hidden">Enter Discount Code</span>
 
                   
 <table class="product-table" id="hm" >
  <caption class="visually-hidden">Shopping cart</caption>
  <thead>
    <tr>
      <th scope="col"><span class="visually-hidden">Product image</span></th>
      <th scope="col"><span class="visually-hidden">Description</span></th>
      <th scope="col"><span class="visually-hidden">Quantity</span></th>
      <th scope="col"><span class="visually-hidden">Price</span></th>
    </tr>
  </thead>
  <tbody>
    {% for item in checkout.line_items %}
    <tr class="product" data-product-id="{{item.product_id}}" data-variant-id="{{item.variant_id}}" data-product-type="{{item.product.type}}">
      <td class="product__image">
        <div class="product-thumbnail">
			<div class="product-thumbnail__wrapper">
               {{ item.image | img_url: 'small' | img_tag }}
			</div>
			<span class="product-thumbnail__quantity" aria-hidden="true">{{item.quantity}}</span>
		</div>
      </td>
      <td class="product__description">
        <span class="product__description__name order-summary__emphasis">{{item.product.title}}</span>
        <span class="product__description__variant order-summary__small-text">{{item.variant.title}}</span>
      </td>
      <td class="product__quantity visually-hidden">
      {{item.quantity}}
      </td>
      <td class="product__price">
        <span class="order-summary__emphasis">{{item.line_price | money }}</span>
      </td>
      <td class="close-p" variant-id="{{item.variant_id}}"><a href="#">x</a></td>
    </tr>
   {% endfor %}
  </tbody>
</table>    
      {{ tracking_code }}
    
      <script type="text/javascript" src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js"></script>
  <script type="text/javascript">
    KlaviyoSubscribe.attachToForms('#email_signup', {
      hide_form_on_success: true, 
       success_message: "your discount code is on its way!"
});
</script>
    <div id="follow-us">
      <h3 id="fsocial">follow us on social!</h3>
      <ul class="social">
        <li><div class="fb-like" data-href="https://www.facebook.com/GekksLowCutLiners/" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div></li>
        <li class="soc-ig"><a href="{{ settings.instagram_link }}" title="{{ shop.name }} on Instagram" target="_blank"><img src="{{'instagram-new-icon.png' | asset_url}}" alt="Instagram" style="max-height: 30px;"/></a></li>
      </ul>
    </div>
  </body>
</html>

